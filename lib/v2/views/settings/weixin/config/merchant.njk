{% extends '../layout.njk' %}

{% block main %} 
<h4 class="text-center">商家设置</h4>
<div class="alert alert-success hidden" role="alert" ng-show="updated">更新成功!</div>

  <form class="form-horizontal merchant" method="post"  enctype="multipart/form-data">
    <div class="form-group">
      <label for="id" class="col-sm-2 control-label">Mercahnt Id</label>
       <div class="col-sm-10">
      <input type="text" name="id" ng-model="merchant.id" class="form-control" id="id" placeholder="Merchant Id" value="{{data.id}}">
       </div>
    </div>
    <div class="form-group">
      <label for="key" class="col-sm-2 control-label">Mercahnt Key</label>
       <div class="col-sm-10">
      <input type="text" name="key" ng-model="merchant.key" class="form-control" id="key" placeholder="Merchant key" value="{{data.key}}">
       </div>
    </div>
    <hr/>
  <div class="text-center">
      <button type="submit" class="btn btn-danger">提交</button>
  </div>
    </form>
  
{% endblock %}