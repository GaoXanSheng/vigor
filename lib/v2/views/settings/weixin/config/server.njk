{% extends '../layout.njk' %}

{% block main %} 
<h4 class="text-center">服务器设置</h4>
<div class="alert alert-success hidden" role="alert">更新成功!</div>
   <form class="form-horizontal server" method="post">
     <div class="form-group">
       <label for="host" class="col-sm-2 control-label">域名(如:weixin.qq.com)</label>
       <div class="col-sm-10">
       <input type="text" name="host" class="form-control" id="host"
              value="{{data.host}}"
              placeholder="请配置您的主机域名">
       </div>
     </div>
     <div class="form-group">
       <label for="prefix" class="col-sm-2 control-label">前缀</label>
       <div class="col-sm-10">
       <input type="text" name="prefix" class="form-control" id="host"
              value="{{data.prefix}}"
              placeholder="请配置您的主机域名">
       </div>
     </div>
  <div class="text-center">
      <button type="submit" class="btn btn-danger">提交</button>
  </div>
   </form>
   
{% endblock %}