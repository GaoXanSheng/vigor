{% extends '../layout.njk' %}

{% block main %} 
<h4 class="text-center">OAuth设置</h4>
<div class="alert alert-success hidden" role="alert" ng-show="updated">更新成功!</div>
   <form class="form-horizontal oauth" method="post">
     <div class="form-group">
       <label for="state" class="col-sm-2 control-label">State</label>
       <div class="col-sm-10">
       <input type="text" name="state" class="form-control" id="state" placeholder="State" value="{{data.state}}">
       </div>
     </div>
     <div class="form-group">
       <label for="scope" class="col-sm-2 control-label">Scope:</label>
       <div class="col-sm-10">
       <select class="form-control" name="scope" id="scope">
         <option value="0" {% if data.scope == '0'%}selected{% endif %}>snsapi_base</option>
         <option value="1" {% if data.scope == '1'%}selected{% endif %}>snsapi_userinfo</option>
      </select>
       </div>
     </div>
     <hr/>
  <div class="text-center">
      <button type="submit" class="btn btn-danger">提交</button>
  </div>
   </form>
   
{% endblock %}